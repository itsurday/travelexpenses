<apex:page docType="html-5.0" standardController="Travel__c" extensions="LocationFinder,NewExpenseCtrlExt" showHeader="false" action="{!createTrainRide}">

    <c:newExpense title="Train Ride" expense="{!expense}" hasMessages="{!hasMessages}" theme="default" limitSearch="true">
        
        <c:movements expense="{!expense}" title="Train Ride" theme="default" locale="{!UserLocale}" />
        <c:cost expense="{!expense}" title="Ticket Price" theme="default"/>
        
        <apex:actionStatus id="SaveButtonStatus">
            <apex:facet name="stop">
                <apex:outputPanel >
                    <apex:commandButton action="{!doSaveExpense}" value="Save" status="SaveButtonStatus" rerender="form"
                                        oncomplete="closePublisher({!hasMessages})" styleClass="btn btn-primary btn-lg btn-block" />       
                </apex:outputPanel>
            </apex:facet>
            <apex:facet name="start">
                <apex:outputPanel >
                    <apex:commandButton value="Saving..." styleClass="btn btn-primary btn-lg btn-block disabled" />    
                </apex:outputPanel>
            </apex:facet>
        </apex:actionStatus>
        
        <br/>
        
    </c:newExpense>
</apex:page>